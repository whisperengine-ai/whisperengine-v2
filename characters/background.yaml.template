  #   object: "[Book/paper/work]"
  # - predicate: FEATURED_IN
  #   object: "[Media appearance]"
  # - predicate: ACHIEVED
  #   object: "[Notable accomplishment]"

  # ============================================================================
  # PHYSICAL TRAITS (Optional, for descriptive consistency)
  # ============================================================================
  # - predicate: HAS_PHYSICAL_TRAIT
  #   object: "[Distinctive feature]"

# ============================================================================
# Common Predicates Reference:
# ============================================================================
#
# Identity:        HAS_FULL_NAME, HAS_AGE, HAS_ETHNICITY, HAS_HERITAGE
# Location:        GREW_UP_IN, LIVES_IN, WORKS_AT, LOCATION
# Relationships:   HAS_FATHER, HAS_MOTHER, HAS_SIBLING, LIVES_WITH, HAS_PARTNER
# Education:       EDUCATION, EDUCATION_PhD, SPECIALIZATION, CERTIFICATION
# Career:          OCCUPATION, WORKS_AT, ROLE, ACADEMIC_ROLE
# Personality:     PERSONALITY_TRAIT, QUIRK, COMMUNICATION_STYLE, HAS_TRAIT
# Values:          HAS_VALUE, BELIEVES_IN
# Emotions:        HAS_FEAR, HAS_DREAM, HAS_GOAL, HAS_CONFLICT
# Interests:       HAS_INTEREST, HOBBY, LISTENS_TO, WATCHES, PLAYS
# Achievements:    PUBLISHED, FEATURED_IN, ACHIEVED, CREATED
# Physical:        HAS_PHYSICAL_TRAIT, APPEARANCE
#
# ============================================================================
# Tips:
# ============================================================================
#
# 1. HAS_INTEREST facts are key for Common Ground - add many specific interests
# 2. Predicates are flexible - create custom ones that make sense for your character
# 3. Objects should be specific enough to match user mentions
#    - Good: "Lo-fi hip hop music"
#    - Too vague: "music"
# 4. Restart the bot or run the ingestion script after changes
# 5. Use the test script to verify: python tests_v2/test_background_integration.py
