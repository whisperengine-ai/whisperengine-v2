  #   object: "[Trait description]"
  # - predicate: QUIRK
  #   object: "[Unique behavior or habit]"
  # - predicate: COMMUNICATION_STYLE
  #   object: "[How they speak/write]"

  # ============================================================================
  # ACHIEVEMENTS & HISTORY
  # ============================================================================
